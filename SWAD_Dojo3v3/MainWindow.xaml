<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SWAD_Dojo3v3"
        xmlns:ViewModel="clr-namespace:SWAD_Dojo3v3.ViewModel" x:Class="SWAD_Dojo3v3.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <ViewModel:MainViewModel/>
    </Window.DataContext>
    <DataGrid ItemsSource="{Binding list}" AutoGenerateColumns="False" Name="dataGrid" HorizontalAlignment="Left" Height="202" Margin="64,44,0,0" VerticalAlignment="Top" Width="406">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Name" Binding="{Binding name}"/>
            <DataGridTextColumn Header="Package" Binding="{Binding package}"/>
            <DataGridTextColumn Header="Sales price"  Binding="{Binding salesPrice}"/>
            <DataGridTextColumn Header="Purchase price" Binding="{Binding purchasePrice}"/>
            <DataGridTextColumn Header="On stock" Binding="{Binding onStock}"/>
        </DataGrid.Columns>
    </DataGrid>

</Window>
